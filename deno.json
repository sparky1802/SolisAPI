"lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/"],
    "rules": {
        "tags": ["recommended"],
        "include": ["ban-untagged-todo","camelcase","default-param-last","eqeqeq","guard-for-in","no-await-in-loop","no-boolean-literal-for-arguments","no-console","no-const-assign","no-eval","no-external-import","no-self-compare","no-sparse-arrays","no-sync-fn-in-async-fn","no-throw-literal","no-top-level-await","no-undef","prefer-ascii","single-var-declarator"],
        "exclude": []
    }
},
"fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "always",
    "include": ["src/"],
    "exclude": ["src/testdata/"]
}